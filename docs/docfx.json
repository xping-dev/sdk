{
  "metadata": [
    {
      "src": [
        {
          "src": "../src",
          "files": [
            "**/*.csproj"
          ]
        }
      ],
      "dest": "api"
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "**/images/**", "**/media/**"
        ],
        "exclude": [ 
          "_site/**", "obj/**" 
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "Xping SDK",
      "_appTitle": "Xping SDK",
      "_appLogoPath": "docs/media/logo.svg",
      "_appFaviconPath": "docs/media/favicon.ico",
      "_appFooter": "<span>Official website <a href=\"https://xping.io\">https://xping.io</a> | Made with <a href=\"https://dotnet.github.io/docfx\">docfx</a></span>",
      "_enableSearch": true,
      "pdf": false
    }
  }
}